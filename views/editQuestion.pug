doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/admin.css')
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap")
  body
    header
      br 
      br
      h1 Edit Questions Page 
      br

      button.button#newQ(onclick="window.location.href='/viewQuestion'") Back

    main
        #setQues
            h4= quizname
            hr
            #block
                form(action="/submitQues", method="post")
                    #ques
                        p Edit Question
                        input(type="text", name="ques", id="quesInput")
                        input(type="hidden", name="quesId", value=id)
                    #optionList
                        .options
                            label(for="ans1") Correct Answer
                            br
                            input(type="text", name="ans1" required)
                        .options
                            label(for="ans2") Wrong Answer
                            br
                            input(type="text", name="ans2" required)
                        .options
                            label(for="ans3") Wrong Answer
                            br
                            input(type="text", name="ans3" required)
                        .options
                            label(for="ans4") Wrong Answer
                            br
                            input(type="text", name="ans4" required)
                    button.button(type="submit" name="done") DONE